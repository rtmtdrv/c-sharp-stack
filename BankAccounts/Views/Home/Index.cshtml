@{
    ViewData["Title"] = "Register";
}
@model User
<link rel="stylesheet" href="~/css/index.css">
<div class="wrapper">
    <h1>Register</h1> <a href="/login">Already Registered?</a>
    <form asp-action="Create" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName"></span>
            <input type="text" asp-for="FirstName" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName"></span>
            <input type="text" asp-for="LastName" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
            <input type="text" asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
            <input asp-for="Password" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Confirm"></label>
            <span asp-validation-for="Confirm"></span>
            <input asp-for="Confirm" class="form-control">
        </div>
        <input type="submit" value="Submit" class="btn btn-success">
    </form> 
</div>
