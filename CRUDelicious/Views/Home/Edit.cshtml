@model Dish
<link rel="stylesheet" href="~/css/edit.css">
<div class="wrapper">
    <a href="/" class="btn btn-primary">Home</a>
    <h1>Edit @Model.Name</h1>
    <form action="/update/@Model.DishId" method="post">
        <div class="form-group">
            <label asp-for="Chef"></label>
            <span asp-validation-for="Chef"></span>
            <input type="text" asp-for="Chef" class="form-control" value="@Model.Chef">
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name"></span>
            <input type="text" asp-for="Name" class="form-control" value="@Model.Name">
        </div>
        <div class="form-group">
            <label asp-for="Calories"></label>
            <span asp-validation-for="Calories"></span>
            <input type="text" asp-for="Calories" class="form-control" value="@Model.Calories">
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <span asp-validation-for="Tastiness"></span>
            <select name="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description"></span>
            <textarea name="Description" cols="10" rows="5" class="form-control">@Model.Description</textarea>
        </div>
        <input type="submit" value="Edit Dish" class="btn btn-success">
    </form>
</div>