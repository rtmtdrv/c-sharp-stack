@{
    ViewData["Title"]="Create New Activity";
}

@model Activity
<style>
    form {
        width: 400px;
    }
    .btn-primary {
        margin-left: 200px;
    }
    span {
        color: red;
    }
</style>
<h1>Create an Activity <a href="dashboard" class="btn btn-primary">Dashboard</a> <a href="/logout" class="btn btn-danger">Log Out</a></h1>
<form asp-action="Create" asp-controller="Activity" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <span asp-validation-for="Title"></span>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <span asp-validation-for="Time"></span>
        <input asp-for="Time" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <span asp-validation-for="Date"></span>
        <input asp-for="Date" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <span asp-validation-for="Duration"></span>
        <input asp-for="Duration" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description"></span>
        <input asp-for="Description" class="form-control">
    </div>
    <input type="submit" value="Create" class="btn btn-success">
</form>