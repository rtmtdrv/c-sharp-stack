@{
    ViewData["Title"] = "Home Page";
}

@model Quote

<link rel="stylesheet" href="~/css/index.css">
<div class="wrapper">
    <h1>Welcome to QuotingDojo</h1>
    <form asp-action="CreateQuote" asp-controller="Home" method="POST">
        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name"></span>
            <input type="text" asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <span asp-validation-for="Content"></span>
            <input type="text" asp-for="Content" class="form-control">
        </div>
        <input type="submit" value="Add my quote!" class="btn btn-success">
    </form>
    <a href="quotes" class="btn btn-primary">Skip to quotes!</a>
</div>